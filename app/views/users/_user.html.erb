<tr><td>
  <%= image_tag user.image.thumb('20x20>').url, :alt => user.name, :width => "20", :height => "20" if user.image %>
  <%= link_to user.name, user %> 
</td><td align = "center"><%= user.email.split('@').first %>
</td><td align = "center"><%= user.created_at.strftime('%D') %>
</td><td align = "center"><%= (([user.visits.map{|v| v.created_at}, user.created_at].flatten.max - user.created_at)/86400).to_i %>
</td><td align = "center"><%= user.visits.select{|v| v.about_type == 'Paper'}.count %>
</td><td align = "center"><%= user.visits.select{|v| v.about_type == 'Follow'}.count %>
</td><td align = "center"><%= user.comments.count + user.assertions.count + user.votes.count + user.reactions.count %>
</td><td align = "center"><%= user.votes_for_me.count %>
</td></tr>
