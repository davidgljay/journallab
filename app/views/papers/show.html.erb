<p><h3><%= @paper.title %></h3></p>
<p><%= @paper.journal %> | Pubmed ID: <%= @paper.pubmed_id %>

<br>
<% @paper.authors.each do |a| %>
  <%= a.lastname %>, <%= a.firstname %> <%= a.initial %>
  <% unless a == @paper.authors.last %>
    |
  <% end %> 
<% end %>

<p>
  <b>Abstract</b><br>
  <%= @paper.short_abstract %>
</p>

<p>
  <h3>Summary</h3>
<table>

  <% unless @paper.assertions.count == 0 %>
  <tr class = "paper assertion">
    <td>
      <style class = "cool round">Core Assertion:</style>
    </td>
    <td width = "80%">
      <%= @paper.latest_assertion.text %>
    </td>
  </tr>
  <% else %>
  <tr class = "paper assertion">
    <td>
      <% form_for @core_assertion, :class => "new_assertion"  do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="field">
         <%= f.text_field :text, :onfocus => "this.value=''", :value => "What is the core assertion of this paper?" %>
         <%= f.hidden_field :paper_id %>
         <%= f.submit "Submit" %>
     </div>
     <% end %> 
   <% end %>
<tr>
<td class = "fig assertion">
<style class = "med round">Fig 1:</style> 
</td>
<td>
Coming soon!
</td>
</tr>
<tr>
<td class = "fig_assertion">
<style class = "hot round">Fig 2:</style>
</td>
<td>
Coming soon!
</td>
</tr>
</table>

</p>


<%= link_to 'Back', papers_path %>
