<%= stylesheet_link_tag 'jl_styles_sum1', :media => 'screen' %>
<div id="contentMain">

<div id="paperInfo" class = "round">
<h1><%= @paper.title %></h1>
	<h3><%= @paper.journal %> | <%= @paper.pubdate.strftime('%B %d, %Y') unless @paper.pubdate == nil %></h3>
	<%= render '/authors/author_list', :paper => @paper %>
	<% if @paper.abstract.nil? || @paper.abstract.empty? %>
		<% if @paper.description %>
		<div>
  			<h4>Description</h4>
  			<p><%= @paper.description %></p>
		</div>
		<% end %>
	<% else %>
		<div id='abstract' class = "clickme">
  			<h4>Abstract</h4>
  			<p id='abstract_short'><%= @paper.short_abstract %></p>
  			<p id='abstract_long' class='hideonload'><%= @paper.abstract %></p>
		</div>
	<% end %>
	<% if @paper.pubmed_id %>
		<%= link_to("Download", "http://pubget.com/paper/" + @paper.pubmed_id.to_s, :class => 'paperNav') %> | 
	<% elsif @paper.doi %>
		<%= link_to("View on " + @paper.journal, "http://dx.doi.org/" + @paper.doi.to_s, :class => 'paperNav') %> | 
	<% end %>
	<% if user_signed_in? %>
		<%= render '/shares/share_button' unless @groups.empty? %> 
		<div class = "sharebox"></div>

		<%= render '/reactions/quickform'%>
		<%= render 'add_figs' if @paper.figs.empty? %>
        <% else %>
		| <a href = "/users/sign_up">Share</a></h3>
        <% end %>

</div>


<p>
<% if !@paper.figs.empty? || !@paper.comments.empty? || !@paper.questions.empty? %>
  <%= render 'overview' %>
  <%= render 'summary' %>
  <div id = "add_figs_link"><a  class = "small clickme">Add/Remove Figures</a></div>
  <div id = "add_figs" class = "hideonload">
	<%= render 'add_figs' %>
  </div>
<% end %>

</p>
			<span class="small grey">
				<% if @paper.visits.count == 1 %>
  					<em><strong>1 person has visited this paper.</strong></em>
				<% else %>
		  			<em><strong><%= pluralize(@paper.visits.count,"People")%></strong> have visited this paper.</em>
				<% end %>
			</span>

</div>
