
<% if @owner.class == Paper %>
	<% if @assertion.text %>
		$('<%= @owner.jquery_target %>').find('tr#paper<%= @owner.id.to_s %>').find('div.latest_assertion').html('<%= @assertion.text %>');
	<% end %>
	<% if @assertion.method_text %>
		$('<%= @owner.jquery_target %>').find('tr#paper<%= @owner.id.to_s %>').find('p.method').html('<%= @assertion.method_text %>');
	<% end %>
<% else %>
	<% if @assertion.text %>
		$('<%= @owner.jquery_target %>').find('div.latest_assertion').html('<%= @assertion.text %>');
	<% end %>
	<% if @assertion.method_text %>
		$('<%= @owner.jquery_target %>').find('p.method').html('<%= @assertion.method_text %>');
	<% end %>
<% end %>

$('<%= @owner.jquery_target %>').addClass('<%= @heatmap[@owner.class.to_s.downcase + @owner.id.to_s][1] %>');

$('.editme_form').css('display', 'none');
$('.editme').css('display', 'inline');
$('div.improve').hide();



