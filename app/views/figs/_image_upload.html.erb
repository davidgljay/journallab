<% if fig.image.nil? %>
<div class = 'fig_upload'>
	<h5>Upload Image</h5>
</div>
<div align='left' class='upload_form hideonload'>
<%= form_for fig, :url => '/figs/' + fig.id.to_s + '/image_upload', :html => {:multipart => true} do |f| %>
<%= f.file_field :fig_image %>
<%= f.submit 'Upload' %>
<% end %>
</div>
<% end %>
