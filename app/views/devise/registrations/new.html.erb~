<h2>Sign up</h2>

<%= form_for(resource_name, resource, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_messages %>
  <h3>First name</h3>
  <%= f.text_field :firstname, :value => "First name", :class => 'searchreset', :onfocus =>  "if(this.value == 'First name') { this.value = ''; }" %> <%= f.text_field :lastname, :value => "Last name", :class => 'searchreset', :onfocus =>  "if(this.value == 'Last name') { this.value = ''; }" %> 


  <h3><%= f.label :email %></h3>
  <%= f.text_field :email %>

  <h3><%= f.label :password %></h3>
  <p><%= f.password_field :password %></p>

  <h3><%= f.label :password_confirmation %></h3>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

