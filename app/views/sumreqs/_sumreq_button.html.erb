   <div class = "sumreq_counter inline">
     <% if item.sumreqs.count == 0 %>
        Request Summary
     <% else %>
        <%= pluralize(item.sumreqs.count, "Summary Request") %>
     <% end %>
   </div>
   <div class = "sumreq_button inline clickme">
    <%= form_for item.sumreqs.create, :html => { :class => hide_my_sumreq(item) + 'inline'}, :remote => true do |f| %>
      <%= f.hidden_field :id, :value => item.id %>
      <%= f.hidden_field :type, :value => item.class.to_s %>
      <% if user_signed_in? %>
         <%= f.hidden_field :group, :value => current_user.get_group.id %>
      <% end %>
      <%= f.submit "[+]", :class => "plainSubmit" %>
    <% end %>
   </div>
   <div class = "sumreq_confirm hideonload inline">
   Got it! We'll give this priority.
   </div>
