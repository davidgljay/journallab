<table class = "comment discussion">
<% comments.each do |comment| %>
  <tr>
    <td <% if comment.comments.count > 0 %> class = "has_reply" <% end %>>
      <%= render 'shared/user_info', :user => comment.user, :date => comment.created_at %>
      <div class = "comment_body">
      <%= render 'votes/vote_form', :candidate => comment %>
      <% comment.linktext.each do |w| %>
          <% if w.class == Paper %>
             <%= link_to w.title, w %>
          <% elsif w.class == Fig %>
             <%= link_to w.paper.title + ", Fig " + w.num.to_s, w.paper %>
          <% elsif w.class == Figsection %>
             <%= link_to w.fig.paper.title + ", Fig " + w.fig.num.to_s + " Section " + w.num.to_s, w.fig.paper %>
          <% else %>
             <%= w %>
          <% end %>
      <% end %>
      <br>
      <nav>
        <ul>
       <% if format == 'comment' %>
         <li>
         <%= link_to 'Reply', '/comments/' + comment.id.to_s + '/reply'  %>
         </li>
       <% elsif format == 'question' %>
         <li>
         <%= link_to 'Comment', '/questions/' + comment.id.to_s + '/comment'  %>
         </li>
         <li>
         <%= link_to 'Answer', '/questions/' + comment.id.to_s + '/answer'  %>
         </li>
       <% end %>
         <li id = "numvotes_<%= comment.id.to_s %>"><%= render 'votes/numvotes', :candidate => comment %>
        </ul>
      </nav> 
      </div>
    </td>
  </tr>
    <%= render 'comments/replies', :comment => comment %>
<% end %>   
</table>
