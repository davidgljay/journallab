 <%= form_for assert, :class => "new_assertion"  do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="field">
         <% if assert.owner.latest_assertion.nil? || (@group.category == "class" && !current_user.lead_of?(@group)) %>
           <%= f.text_field :text, :onfocus => "this.value=''", :value =>  "What is the core conclusion of this " + type + "?" %>
           <br>
           <%= f.text_field :method, :onfocus => "this.value=''", :value => "What principle methods are used?" %>
         <% else %>
           <%= f.text_field :text, :value =>  assert.owner.latest_assertion.text %>
           <br>
           <%= f.text_field :method, :value => assert.owner.latest_assertion.method %>
         <% end %>
        </div>
         <br>
         <%= f.hidden_field :about, :value => type %>
         <%= f.hidden_field :owner_id, :value => assert.owner.id.to_s %>
         <%= f.submit "Submit" %>
      <% end %>

