<div id = "updateFeed">
<% @feed.each do |item| %>
<div class = "search_results">
	<table><tr><td width = "740">
		<%= render '/papers/list', :paper => item[:paper] %>
	</td>
	<% if item[:user].image && !item[:anon] %>
		<td width="80">
			<div class = "feedImage"><%= image_tag item[:user].image.thumb('80x80>').url, :alt => item[:user].name, :width => "80", :height => "80" %></div>
		</td>
	<% end %>
	</tr></table>
      <div class = "sharetext">
	<% if item[:anon] %>
		<strong>Anonymous</strong> (<font rel="tooltip" title="Use these names to distinguish one anonymous user from another." class = "clickme"><%= item[:user].anon_name %>) <%= item[:text] %>
	<% else %>
		<strong><%= item[:user].firstname + ' ' + item[:user].lastname %></strong> <%= item[:text] %>
	<% end %>
	<% if item[:item].class != Assertion %>
	        <strong>"</strong><%= render 'comments/linktext', :comment => item[:item] %><strong> "</strong>
	<% end %>
      </div>
     <div id = "timestamp" class="small grey"><%= item[:created_at].strftime('%B %d, %Y') %></div>
</div>
<% end %>

</div>
