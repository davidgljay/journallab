
<%= image_tag 'jlablogo.png', :id => 'mainlogo' %>

<%= form_tag('/lookup', :method => "get", :class => "homepage_search round") do  %>
   <%= label_tag :pubmed_id, 'Find a paper, discuss it with your lab or with the world.' %>
   <%= text_field_tag :pubmed_id %></br>
   <%= submit_tag("Search") %>
<% end %>

<% if signed_in? && @group.id != nil %>
<div class = "feed round">
  <h3><%= @group.name %></h3>
    <% if @group.category == "class" %>
    <strong>
     Instructors: 
     <% @instructors.each do |i| %>
       <%= i.lastname %>, <%= i.firstname %> 
       <% unless i == @instructors.last %>
       | 
       <% end %>
     <% end %>
     </strong>
      <%= render '/groups/class_papers' %>
    <% elsif @group.category == "lab" %>
      <%= render '/groups/nav' %>
      <%= render '/groups/feed' %>
      <%= render '/groups/sumreq_feed' %>
    <% end %>
</div>
<% end %>
