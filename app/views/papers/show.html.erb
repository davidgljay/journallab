<script type="text/javascript">
  mpq.track("Paper viewed",{'id':'<%= @paper.id.to_s %>', 'user':'<%= current_user.anon_name %>'});
</script>
<% if signed_in? && Group.exists?(2) %>
<% if current_user.groups.include?(Group.new) %>
  <%= link_to 'Extract images from Medline', '/grab_images/' + @paper.id.to_s %>
<% end %>
<% end %>
<p><h3><%= @paper.title %></h3></p>
<table>
  <tr>
   <td class="paperinfo">
   <p>Journal: <%= @paper.journal %>, <%= @paper.pubdate.year unless @paper.pubdate == nil %>
   | 
   Pubmed ID: <%= link_to @paper.pubmed_id, 'http://www.ncbi.nlm.nih.gov/pubmed/' + @paper.pubmed_id.to_s %>
   | <%= link_to(image_tag("pdf.png"), "http://pubget.com/paper/" + @paper.pubmed_id.to_s) %> <em><style class="tinytext">(via pubget)</style></em>

  <br>
  <%= render '/authors/author_list', :paper => @paper %>
  </td>
  <% if @paper.visits.count > 1 %>
  <td class = "visits">
  <strong><%= pluralize(@paper.visits.count,"People")%></strong>
  <br>
  <span class="tinytext">have viewed this paper.</span>
  </td>
  <% end %>
 </tr>
</table>



<% unless @paper.abstract.nil? %>
<div id='abstract' class = "clickme">
  <b>Abstract</b><%= image_tag 'magnifying_glass.png', :class => 'expand_image' %>
  <p id='abstract_short'><%= @paper.short_abstract %></p>
  <p id='abstract_long' class='hideonload'><%= @paper.abstract %></p>
</div>
<% end %>

  <% if @group.papers.include?(@paper) && @paper.pdf_link != nil %>
  <div class="downloadlink round">
     <%= link_to 'Download PDF', @paper.pdf_link %>
  </div>
  <% end %>

<%= render 'filters/class_options' %>
<div class = "view_mode">
  <%= form_tag(:paper_show, :method => "get", :class => 'view_mode') do  %>
    <%= hidden_field_tag :id, @paper.id %>
    <% if @mode == 2 %>
      <%= hidden_field_tag :mode, "public" %>
      <%= submit_tag("Lab Discussion", :class => 'view_mode_label') %>      <%= image_tag 'testtube.jpg' %><br>
      <%= submit_tag("Switch to Public", :class => 'view_mode_switch') %>


    <% elsif @mode == 1 %>
      <%= hidden_field_tag :mode, "group" %>
      <%= submit_tag("Public Discussion" , :class => 'view_mode_label') %><%= image_tag 'globe.jpg' %><br>
      <%= submit_tag("Switch to Lab", :class => 'view_mode_switch') %>

    <% end %>    
  <% end %>
</div>

<p>
<% if @paper.figs.empty? %>
  <%= render '/papers/add_figs', :about => @paper unless @paper.figs.count > 0%>
<% else %>
  <%= render 'summary' %>
<% end %>
</p>
