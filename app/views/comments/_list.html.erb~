<h3>Comments</h3>
<%= render 'comments/form', :owner => @owner, :comment => @owner.comments.build,  :reply_to => false, :format => 'comment' %>

<table class = "comment discussion">
<% @comments.each do |comment| %>
  <tr >
    <td class = "<% if comment.comments.count > 0 %> has_reply <% end %> <% if comment.author %> author_comment <% end %> comment_body">
      <div class = "comment_body <%= 'author_comment_body' if comment.author %>">
      <%= render 'linktext', :comment => comment %>
      <%= render 'shared/user_info', :user => comment.user, :date => comment.created_at %>
      <div>
        <ul>
         <li class="replylink clickme">
	Reply
         </li>
         <li id = "numvotes_<%= comment.id.to_s %>"><%= render 'votes/vote_form', :candidate => comment %>
        </ul>
      </div>
      <div> 	      
        <div class = "replyform hideonload">
          <%= render '/comments/form', :comment => comment.comments.build, :reply_to => comment, :format => 'reply' %>
        </div>
      </div>
      </div>
    </td>
  </tr>
    <%= render 'comments/replies', :comment => comment %>
<% end %>   
</table>

