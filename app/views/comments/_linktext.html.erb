      <% comment.linktext.each do |w| %>
          <% if w.class == Paper %>
             <%= link_to "("+ w.authors.first.lastname + ", " + w.journal + ")", w %>
          <% elsif w.class == Fig %>
             <%= link_to "(" + w.paper.authors.first.lastname + ", " + w.paper.journal + ", Fig " + w.num.to_s + ")", w.paper %>
          <% elsif w.class == Figsection %>
             <%= link_to "(" + w.fig.paper.authors.first.lastname + ", " + w.fig.paper.journal + ", Fig " + w.num.to_s + " Section " + w.num.to_s + ")", w.fig.paper %>
          <% else %>
             <%= w %>
          <% end %>
      <% end %>
