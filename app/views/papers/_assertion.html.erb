    <table>
    <tr class = "summary" id = <%= about.class.to_s.downcase + about.num.to_s %> >
    <% if about.class == Paper %>
      <td width="1px"></td>
    <td class  = "sumleft <%= "heat" + @heatmap.select{|h| h[0] == "paper" && h[1] == about.id}[0][3].to_s %> round core assertion">
      Core Conclusion:
      <%= render 'add_figs_and_sections', :about => about unless about.figs.count > 0%>
    </td>
    <% elsif about.class == Fig %>
        <% unless about.figsections.count == 0 %>
          <td class = "figtoggle">
           + 
          </td>
         <% else %>
           <td width="20px">
           </td>
        <% end %>
      
           <td class = "sumleft <%= "heat" + @heatmap.select{|h| h[0] == "fig" && h[1] == about.id}[0][3].to_s %> round fig assertion" >
           Fig <%= about.num.to_s %>:
             <% if about.image.nil? %>
               <% if current_user.admin %>
                  <%= render '/figs/image_upload', :fig => about %>
               <% end %>
             <% else %>
               <%= image_tag about.image.thumb('80x80>').url, :class => 'thumbnail clickme'%>
             <% end %>
           <%= render '/papers/add_figs_and_sections', :about => about unless about.figsections.count > 0%>
           </td>
      <% elsif about.class == Figsection %>
       <td width = "40px"></td>
       <td class = "sumleft <%= "heat" + @heatmap.select{|h| h[0] == "figsection" && h[1] == about.id}[0][3].to_s %> round figsection assertion">
         Section <%= about.letter(about.num) %>:  
       </td>
      <% end %>
    <td class = "sumright">
    
  <% if about.assertions.count != 0 && @group.let_through_filter?(about.latest_assertion, current_user) %>
       <%= about.latest_assertion.text %>
       <br>
         <style class="method"><%= about.latest_assertion.method %> </style>
       <% unless about.latest_assertion.alt_approach.nil? %>
       <div class = "alt_approach">
         <strong>Alternate Approaches: </strong><style class="method"><%= about.latest_assertion.alt_approach %> </style>
       </div>
       <% end %>
       <nav>
       <ul>
         <li class="improvelink">Improve</li>
         <li class="commentlink">  
             <%= form_tag(:comment_list, :method => "get", :class => "commentlist") do  %>
               <%= hidden_field_tag :parent, about.class.to_s %>
               <%= hidden_field_tag :id, about.id %>
               <% if about.comments.count > 0 %>
                 <%= submit_tag(pluralize(about.comments.count, "Comment")) %>
               <% else %>
                 <%= submit_tag("Add a Comment") %>
               <% end %>
             <% end %>
          </li>
           <li class="questionlink">
             <%= form_tag(:question_list, :method => "get", :class => "questionlist") do  %>
               <%= hidden_field_tag :parent, about.class.to_s %>
               <%= hidden_field_tag :id, about.id %>
               <% if about.questions.count > 0 %>
                 <%= submit_tag(pluralize(about.questions.count, "Question")) %>
               <% else %>
                 <%= submit_tag("Add a Question") %>
               <% end %>
             <% end %>
           </li>
        </ul>
        </nav>
        <div class="improve">
           <%= render 'assertions/form', :assert => about.assertions.build, :type => about.class.to_s.downcase, :id => about %>
           <%= render 'assertions/list', :history => about.assertions.all %>
         </div>
         <div class = "commentbox", id = <%= 'comments_' + about.class.to_s + '_' + about.id.to_s %>>
         </div>
         <div class = "questionbox", id = <%= 'questions_' + about.class.to_s + '_' + about.id.to_s %>>
         </div>
  <% else %>

      <% if @group.category == 'class' %>
        <% button = 'Summarize for your class' %>
      <% else %>
        <% button = 'Summarize for your class' %>
      <% end %>
     <%= form_tag('/assertions/new', :method => "post", :remote => true, :class => 'enter_assertion')  do  %>
       <%= hidden_field_tag :about, about.class.to_s %>
       <%= hidden_field_tag :id, about.id %>
       <%= submit_tag(button) %> 
     <% end %>
      <div class="assertion_form">
      </div>
<% end %>
     <% if about.class == Fig %>
       <% unless about.image.nil? %>
          <%= image_tag about.image.thumb('600x600>').url, :class => 'fullfig'%>
       <% end %>
     <% end %>
</td>
</tr>
</table>
</td>
</tr>
<% if about.class == Fig %>
<div id="<%= "fig_" + about.num.to_s + "_sections"%>" class = "fig_sections">
   <% about.figsections.each do |section| %>
     <%= render '/papers/assertion', :about => section %>
   <% end %>
</div>
<% end %>
