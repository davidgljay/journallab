<%= form_for(comment) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :view_mode, '2' %>
    <% if reply_to %>
      <%= f.label "Leave a reply" %><br />
    <%= f.hidden_field :reply_to, :value => reply_to.id %>
    <%= f.hidden_field :form, :value => 'reply' %>
    <% else %>
      <%= f.label "Leave a Comment" %><br />
      <%= f.hidden_field :form, :value => 'comment' %>
    <% end %>
    <%= f.text_area :text %>
  </div>
    <% if reply_to %>
    <%= f.hidden_field :assertion_id, :value => reply_to.assertion_id %>    
    <% else %>
    <%= f.hidden_field :assertion_id, :value => owner.assertions[-1].id %>    
    <% end %>
  <div class="actions">
    <%= f.submit :value => "Submit" %>
  </div>
<% end %>
