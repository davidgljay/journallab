<h1>Listing papers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Pubmed</th>
    <th>Journal</th>
    <th>Abstract</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @papers.each do |paper| %>
  <tr>
    <td><%= paper.title %></td>
    <td><%= paper.pubmed_id %></td>
    <td><%= paper.journal %></td>
    <td><%= paper.short_abstract unless paper.abstract.nil? %></td>
    <td><%= link_to 'Show', paper %></td>
    <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
    <td><%= link_to 'Destroy', paper, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

